        <Label x:Name="StatusDetail" Content="" HorizontalAlignment="Left" Height="28" Margin="110,793,0,0" VerticalAlignment="Top" Width="785" FontSize="16"/>
        <Label x:Name="label1" Content="Status:" HorizontalAlignment="Left" Margin="10,793,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="label1_Copy" Content="Create New Gesture" HorizontalAlignment="Left" Margin="235,507,0,0" VerticalAlignment="Top" Width="152" FontSize="16"/>
        <TextBox x:Name="fileName" HorizontalAlignment="Left" Height="28" Margin="241,579,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" FontSize="16"/>
        <Button x:Name="createButton" Content="Create File" HorizontalAlignment="Left" Margin="241,625,0,0" VerticalAlignment="Top" Width="75" Click="createButton_click"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="20" Margin="241,667,0,0" VerticalAlignment="Top" Width="146"/>
